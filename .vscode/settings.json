{
    "files.exclude": {
        "**/*.js": { "when": "$(basename).ts" },
        "**/*?.js": { "when": "$(basename).tsx" }
    },
    "files.autoSave": "off",
    // Set the default
    "editor.formatOnSave": false,
    // Enable per-language
    "[javascript]": {
        "editor.formatOnSave": true
    },
    // Enable prettier for typescript react
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "workbench.editor.showTabs": true
}
